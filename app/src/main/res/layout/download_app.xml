<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content"
    android:padding="@dimen/main_fragment_padding"
    android:layout_marginBottom="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginLeft="10dp"

    android:background="@drawable/red_border">

    <TextView
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/num"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:background="@drawable/red_circle"
        app:layout_constraintLeft_toLeftOf="parent"
        android:gravity="center"
        android:text=""
        android:textSize="@dimen/number_text_size"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toLeftOf="@id/text"
        tools:ignore="SpUsage" />
    <TextView
        app:layout_constraintLeft_toRightOf="@id/num"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:padding="10dp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:id="@+id/text"
        android:textSize="20sp"
        android:text="@string/you_need_to_download_another"/>

</android.support.constraint.ConstraintLayout>